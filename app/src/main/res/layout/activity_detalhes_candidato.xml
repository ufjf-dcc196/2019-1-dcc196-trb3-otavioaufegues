<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetalhesCandidatoActivity">

    <TextView
            android:text="Candidato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8" android:textSize="30sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="137dp" android:layout_marginStart="137dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/buttonEditar" android:layout_marginRight="8dp"/>
    <TextView
            android:text="E-mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            app:layout_constraintEnd_toEndOf="@+id/textView12" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="140dp"/>
    <TextView
            android:text="Telefone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            app:layout_constraintEnd_toEndOf="@+id/textView10" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="276dp"/>
    <TextView
            android:text="Data de nascimentio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            app:layout_constraintEnd_toEndOf="@+id/textView13" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="232dp"/>
    <TextView
            android:text="Nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="104dp" android:layout_marginStart="104dp"/>
    <TextView
            android:text="Perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            app:layout_constraintEnd_toEndOf="@+id/textView11" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="184dp" android:layout_marginEnd="4dp" android:layout_marginRight="4dp"/>
    <Button
            android:text="Salvar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonEditar"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="29dp" android:layout_marginRight="29dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editAltNome"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="84dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="152dp" android:layout_marginStart="152dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editAltNascimento"
            app:layout_constraintStart_toStartOf="@+id/editAltPerfil" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="212dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editAltEmail"
            app:layout_constraintStart_toStartOf="@+id/editAltNome" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="128dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editAltTelefone"
            app:layout_constraintStart_toStartOf="@+id/editAltNascimento" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="260dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editAltPerfil"
            app:layout_constraintStart_toStartOf="@+id/editAltEmail" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="176dp"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="408dp"
            android:layout_height="372dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginBottom="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/divider2" android:id="@+id/ListaProducoes"/>
    <View
            android:id="@+id/divider2"
            android:layout_width="395dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="317dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Nova Produção"
            android:layout_width="106dp"
            android:layout_height="58dp" tools:layout_editor_absoluteY="8dp"
            android:id="@+id/buttonNovaProducao" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>