<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:id="@+id/linearLayout2">
    <TextView
            android:id="@+id/textCategoriaProducao"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:text="cat" android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="78dp" app:layout_constraintStart_toStartOf="@+id/textIDProducao"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="@+id/textIDProducao"/>
    <TextView
            android:id="@+id/textDescricao"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:text="desc"
            android:layout_span="2"
            tools:layout_editor_absoluteY="45dp" app:layout_constraintStart_toStartOf="@+id/textCategoriaProducao"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="@+id/textCategoriaProducao"/>
    <TextView
            android:id="@+id/textTitulo"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:text="titulo"
            android:layout_span="2" android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="8dp" app:layout_constraintStart_toStartOf="@+id/textDescricao"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="@+id/textDescricao"/>
    <TextView
            android:id="@+id/textIDProducao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:visibility="visible"
            android:text="id"
            tools:layout_editor_absoluteY="115dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"/>
</androidx.constraintlayout.widget.ConstraintLayout>