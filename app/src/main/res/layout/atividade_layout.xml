<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:id="@+id/linearLayout">

    <TextView
            android:text="TextView"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:id="@+id/textIDAtividade" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:id="@+id/textAtividadeDescricao" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textIDAtividade" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:id="@+id/textAtividadeHoras" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textAtividadeDescricao"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>